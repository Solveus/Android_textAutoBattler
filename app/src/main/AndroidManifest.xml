<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.textautobattler">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TextAutoBattler">
        <!-- main -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TextAutoBattler.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- battle log -->
        <activity
            android:name=".BattleLogActivity"
            android:label="@string/toolbar_battlelog_title" />
        <!-- settings -->
        <activity
            android:name=".SettingsActivity"
            android:label="@string/toolbar_settings_title" />
        <activity
            android:name=".EditGameObjects"
            android:label="@string/edit_game_object" />

    </application>

</manifest>